<%= form_with model:@blog_post do |form| %> 
<% if form.object.errors.any? %>
  <div>
    <% form.object.errors.full_messages.each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>
  <% end %>

  <div>
    <%= form.label :title%>
    <%= form.text_field :title, class: "block p-2.5 w-full text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500"%>
  </div>

  <div>
    <%= form.label :content%>
    <%= form.text_area :content, rows: 10, class: "block p-2.5 w-full text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500"%>
  </div>
  <%= form.button "Save Post", class: "inline-flex items-center my-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50"%>
<% end %>